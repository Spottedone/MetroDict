<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MetroDict.Common">
    
    <!-- brushes -->
    <SolidColorBrush x:Key="MDBackground" Color="DarkGray" />
    
	<Style TargetType="TextBlock" x:Key="MDText">
		<Setter Property="FontFamily" Value="Helvetica"></Setter>
	</Style>

    <Style TargetType="TextBlock" x:Key="MDColoredText" BasedOn="{StaticResource MDText}">
       <Setter Property="Foreground" Value="Chartreuse"></Setter>
    </Style>
	
	<Style x:Key="ButtonStyle" TargetType="Button">
		<Setter Property="MinWidth" Value="80" />
	</Style>
    <Style x:Key="MDHeader" TargetType="TextBlock"/>

</ResourceDictionary>
